# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure Cosmos DB
COSMOS_DB_CONNECTION_STRING=your_cosmos_db_connection_string_here
COSMOS_DB_DATABASE_NAME=pulsecraft
COSMOS_DB_CONTAINER_NAME=sessions

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=customer-data

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=your_service_bus_connection_string_here
AZURE_SERVICE_BUS_QUEUE_NAME=personalization-queue

# Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=your_app_insights_key_here

# Demo Mode Settings
DEMO_MODE=true
DEMO_DATA_PATH=./data/sessions
